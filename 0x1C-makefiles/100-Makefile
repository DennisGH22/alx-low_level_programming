CC = gcc
CFLAGS = -Wall -Werror -Wextra -pedantic

SRC = main.c school.c
OBJ = $(patsubst %.c, %.o, $(SRC))

NAME = school

RM = rm -f

.PHONY: all clean oclean fclean re

all: $(NAME)

$(NAME): $(OBJ)
	$(CC) $(OBJ) -o $(NAME) $(CFLAGS)

clean:
	$(RM) *~ $(NAME)

oclean:
	$(RM) $(OBJ)

fclean: clean oclean

re: fclean all

$(OBJ): m.h
